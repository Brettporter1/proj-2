<main class="container w-full h-full relative flex flex-col justify-center">
    <!-- blurred hero image -->
    <div class="w-full h-1/3">
        <img class="w-full h-2/3" src="./images/beer-bar-glass.jpg">
    </div>
    <!-- logo image  -->
    <div class="absolute flex justify-center items-center self-center rounded-full bg-white z-10 main-logo">
        <h1 id="alc-content" class="text-6xl font-bold dui-orange">{{alcLevel}}</h1>
    </div>
    <!-- main content -->
    <div class="w-full grey-split h-2/3 bg-gray-200 flex items-center flex-col">
        <form action="/amidrunk" method="POST" id="drunk-form" class="flex flex-col items-center text-gray-700 w-5/6 justify-center mt-24 mb-6">
            <label for="name" class="dui-blue text-xl text-center w-full font-bold mt-4">TYPE</label>
            <input class="dui-input" name="type" type="text" list="types" placeholder="Vodka">
            <datalist id="types" class="text-gray-300">
                <option value="Vodka">
                <option value="Whiskey">
            </datalist>

            <label for="alc_percentage" class="dui-blue text-xl w-full text-center font-bold mt-4">ALCOHOL PERCENTAGE</label>
            <input class="dui-input" id="percent" name="alc_percentage" type="text" placeholder="43 (percent)">

            <label for="password" class="dui-blue text-xl w-full text-center font-bold mt-4">QUANTITY</label>
            <input class="dui-input" id="quant" name="quantity" type="text" placeholder="2 (oz)">

            <label for="password" class="dui-blue text-xl w-full text-center font-bold mt-4">HOURS DRINKING</label>
            <input class="dui-input" id="hours" name="hours" type="text" placeholder="3.25">

            <button type="submit" id="drunkness" class="btn-lg px-4 py-4 w-3/4 mt-6">AM I DRUNK</button>
        </form>
        <p class="m-auto w-full text-center mt-6">Are you finished?</p>
            <button onclick="window.location.href = '/login';" class="btn-lg mt-2 mb-6 py-2 px-6 m-auto font-bold">LOGOUT</button>
    </div>
</main>